{
    "name": "violinist-dev/commit-message-creator",
    "description": "Generates commit messages for violinist",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Eirik S. Morland",
            "email": "eirik@morland.no"
        }
    ],
    "autoload": {
      "psr-4": {
        "Violinist\\CommitMessageCreator\\": "src"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Violinist\\CommitMessageCreator\\Tests\\": "tests/src"
      }
    },
    "minimum-stability": "dev",
    "config": {
      "platform": {
        "php": "7.0.0"
      }
    },
    "scripts": {
      "test": "@composer lint && phpunit",
      "lint": "phpcs -p -n"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "^3.4",
        "php-coveralls/php-coveralls": "^2.0"
    },
    "require": {
        "violinist-dev/violinist-config": "^1"
    }
}
